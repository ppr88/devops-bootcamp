pipeline {
    agent any

    environment {
        APP_VERSION = "test"
    }

    stages {
        stage('Bump version') {
            steps {
                echo "Bumping the application version..."
                dir('07-jenkins/app/') {
                    script {
                        echo "APP_VERSION value (before): '${env.APP_VERSION}'"
                        // Capture the new application version 
                        def versionOutput = sh(script: "npm version patch", returnStdout: true).trim()
                        echo "Version command output (inside): '${versionOutput}'"
                        env.APP_VERSION = versionOutput
                        echo "APP_VERSION value (inside): '${env.APP_VERSION}'"


                    }
                    echo "new app version is: ${env.APP_VERSION}"
                }
            }
        }
        stage('Build') {
            steps {
                echo "Building the application..."
                dir('07-jenkins/') {
                    sh "docker build -t ppr88/devops-bootcamp-module08:1.0 ."
                }
            }
        }
        stage('Test') {
            steps {
                echo "Testing the application..."
                dir('07-jenkins/') {
                    sh "docker run node_app npm test"
                }
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying the application..."
                dir('07-jenkins/') {
                    withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                        sh "echo '${env.PASS}' | docker login -u '${env.USER}' --password-stdin"
                        sh "docker push ppr88/devops-bootcamp-module08:1.0"
                    }
                } 
            }
        }
    }
}